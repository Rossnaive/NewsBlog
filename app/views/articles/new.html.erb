<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p>
        <%= f.label :title %></br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :text %></br>
        <%= f.text_field :text %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
</br>
<%= link_to 'Back', articles_path %>